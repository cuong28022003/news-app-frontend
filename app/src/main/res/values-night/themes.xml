<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Newsapp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="TitleTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/newscycle_bold</item>
    </style>

    <!--RoundedImageView-->
    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="TextViewLightStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <style name="SubTitleTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/newscycle_regular</item>
    </style>

    <style name="NormalTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/newscycle_regular</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextColorWhite">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TEXT_While">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BackgroundMain">
        <item name="android:background">#212121</item>
    </style>

    <style name="AuthBackground">
        <item name="android:backgroundTint">@color/night</item>
    </style>

    <style name="BackgroundColorNav">
        <item name="android:background">#b9baba</item>
    </style>

    <style name="SCREEN">
        <item name="android:background">#232323</item>
    </style>

    <style name="SCREEN_S">
        <item name="android:background">#232323</item>
    </style>

    <style name="TEXT">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="TextBlue">
        <item name="android:textColor">#FFEB3B</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BUTTON">
        <item name="android:textColor">#000000</item>
        <item name="android:background">#b9baba</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textFontWeight" tools:targetApi="p">700</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AppModalStyle" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>